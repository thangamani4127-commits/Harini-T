        }
        
        /* 变换示例 */
        .transform-example {
            height: 150px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .transform-box {
            width: 60px;
            height: 60px;
            background: #9b59b6;
            transition: all 0.5s ease;
        }
        
        .transform-box:hover {
            transform: rotate(45deg) scale(1.2);
            border-radius: 50%;
            background: #1abc9c;
        }
        
        /* 响应式设计示例 */
        .responsive-example {
            height: 150px;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #2ecc71;
            color: white;
            font-weight: bold;
