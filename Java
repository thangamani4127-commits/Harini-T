import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class SimpleJavaApp extends JFrame {
    private JTextField inputField;
    private JTextArea outputArea;
    private JButton processButton;
    private JButton clearButton;
    
    public SimpleJavaApp() {
        // 设置窗口属性
        setTitle("Java 示例应用程序");
        setSize(500, 400);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);
        
        // 创建UI组件
        createComponents();
        
        // 布局组件
        layoutComponents();
    }
    
    private void createComponents() {
        inputField = new JTextField(20);
        outputArea = new JTextArea(10, 30);
        outputArea.setEditable(false);
        
        processButton = new JButton("处理文本");
        clearButton = new JButton("清除");
        
        // 添加按钮事件监听器
        processButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                processText();
            }
        });
        
        clearButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                inputField.setText("");
                outputArea.setText("");
            }
        });
    }
    
    private void layoutComponents() {
        setLayout(new BorderLayout(10, 10));
        
        // 顶部面板
        JPanel topPanel = new JPanel();
        topPanel.add(new JLabel("输入文本:"));
        topPanel.add(inputField);
        topPanel.add(processButton);
        topPanel.add(clearButton);
        
        // 中央面板
        JScrollPane scrollPane = new JScrollPane(outputArea);
        
        add(topPanel, BorderLayout.NORTH);
        add(scrollPane, BorderLayout.CENTER);
        
        // 添加一些边距
        topPanel.setBorder(BorderFactory.createEmptyBorder(10, 10, 10, 10));
        scrollPane.setBorder(BorderFactory.createEmptyBorder(0, 10, 10, 10));
    }
    
    private void processText() {
        String text = inputField.getText().trim();
        if (text.isEmpty()) {
            JOptionPane.showMessageDialog(this, "请输入一些文本", "提示", JOptionPane.INFORMATION_MESSAGE);
            return;
        }
        
        // 处理文本
        String processed = "原始文本: " + text + "\n" +
                          "文本长度: " + text.length() + " 个字符\n" +
                          "大写形式: " + text.toUpperCase() + "\n" +
                          "小写形式: " + text.toLowerCase() + "\n" +
                          "反转文本: " + new StringBuilder(text).reverse().toString();
        
        outputArea.setText(processed);
    }
    
    public static void main(String[] args) {
        // 使用SwingUtilities确保GUI线程安全
        SwingUtilities.invokeLater(new Runnable() {
            @Override
            public void run() {
                new SimpleJavaApp().setVisible(true);
            }
        });
    }
}
